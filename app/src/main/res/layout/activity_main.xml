<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lgj.example.com.biyesheji.ui.activity.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RadioGroup
        android:id="@+id/rg_01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <RadioButton
            android:id="@+id/rb_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_main_tab"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="主页"
            android:textColor="@color/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_photo"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="相册"
            android:textColor="@color/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_vote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_vote"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="投票"
            android:textColor="@color/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_file"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="文件"
            android:textColor="@color/selector_home_tab"
            android:textSize="12sp"/>
    </RadioGroup>

</LinearLayout>
