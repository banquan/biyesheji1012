<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loginin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context="lgj.example.com.biyesheji.ui.activity.LogininActivity">

    <com.chaychan.viewlib.PowerfulEditText
        android:id="@+id/et_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:funcType="canClear"
        android:hint="用户名"
        android:layout_marginBottom="30dp"
        />

    <com.chaychan.viewlib.PowerfulEditText
        android:id="@+id/et_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:funcType="canWatchPwd"
        android:inputType="textPassword"
        android:hint="密码"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/loginin_btn"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/button_style"
        android:fontFamily="微软雅黑"
        android:layout_marginBottom="30dp"
        android:text="登录"/>

    <TextView
        android:id="@+id/register_tv"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/tv_register_style"
        android:textSize="14sp"
        android:clickable="true"
        android:fontFamily="微软雅黑"
        android:textStyle="bold"
        android:text="新用户"/>
</LinearLayout>
